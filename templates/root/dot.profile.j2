# sh/ksh initialization
PATH=/sbin:/usr/sbin:/bin:/usr/bin:/usr/X11R6/bin:/usr/local/sbin:/usr/local/bin
export PATH
: ${HOME='/root'}
export HOME
export LANG=C
export LC_MESSAGES=C
export LC_TIME=C
export LC_CTYPE=C
umask 022

case "$-" in
*i*)    # interactive shell
    if [ -x /usr/bin/tset ]; then
        if [ X"$XTERM_VERSION" = X"" ]; then
            eval `/usr/bin/tset -sQ '-munknown:?vt220' $TERM`
        else
            eval `/usr/bin/tset -IsQ '-munknown:?vt220' $TERM`
        fi
    fi

    # Command aliases
    alias ls='/bin/ls -1F'
    alias la='/bin/ls -laF'
    alias ll='/bin/ls -Fla'

    # Aliases for only super user
    alias halt='Use /sbin/halt'
    alias reboot='Use /sbin/reboot'
    alias shutdown='Use /sbin/shutdown'

    ;;
esac
